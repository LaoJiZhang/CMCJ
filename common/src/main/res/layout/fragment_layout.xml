<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View"/>

        <import type="com.pansijing.common.base.component.BaseDataBindingActivity.ActivityTitleInfo"/>

        <variable
            name="info"
            type="ActivityTitleInfo"/>

        <variable
            name="flag"
            type="com.pansijing.common.base.component.BaseDataBindingActivity.ActivityFlag"/>
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- loading 页 -->
        <include
            layout="@layout/layout_loading"
            bind:flag="@{flag}"/>

        <!-- content 页 -->
        <FrameLayout
            android:id="@+id/public_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="@{flag.flag == flag.STATE_NORMAL ? View.VISIBLE : View.GONE , default = visible}"/>

        <!-- 无网络 页 -->
        <include
            android:id="@+id/public_err_network"
            layout="@layout/layout_err_network"
            bind:flag="@{flag}"/>

        <!-- 无数据 页 -->
        <include
            layout="@layout/layout_empty"
            bind:flag="@{flag}"/>

        <!-- 错误 页 -->
        <include
            layout="@layout/layout_error"
            bind:flag="@{flag}"/>
    </FrameLayout>
</layout>
